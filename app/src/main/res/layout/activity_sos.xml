<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/imageViewBackArrow"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/back_icon2"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:onClick="onBackArrowClick"
        android:contentDescription="Back Arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true" />

    <TextView
        android:id="@+id/textViewHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Are you in crisis?"
        android:textColor="@color/black"
        android:textSize="23sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewBackArrow"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textViewSubHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are not alone. Help is just a call away."
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/textViewHead"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:textStyle="bold|normal"
        app:layout_constraintWidth_max="320dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginStart="15dp"
        android:gravity="center_horizontal"
        android:layout_marginEnd="15dp"/>

    <View
        android:id="@+id/horz"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="100dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewSubHead"
        android:layout_marginEnd="100dp"
        android:background="#4B000000"/>

    <TextView
        android:id="@+id/textViewBelowSubHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you are dealing with abuse, trauma or crisis, MindSync is not enough. It is important that you talk to a person you feel safe sharing what you are dealing with. If there is no one, call on of the helplines below. Things will get better."
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/horz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:textStyle="normal"
        app:layout_constraintWidth_max="320dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginStart="15dp"
        android:gravity="center_horizontal"
        android:layout_marginEnd="15dp"/>

    <Button
        android:id="@+id/btnInternationalCrisisHelpline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#F44336"
        android:clickable="true"
        android:contentDescription="SOS Button"
        android:focusable="true"
        android:onClick="onClickInternationalHelpline"
        android:padding="15dp"
        android:text="International Crisis Helplines"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewBelowSubHead"
        app:layout_constraintVertical_bias="0.726" />

    <Button
        android:id="@+id/btnInternationalChildHelpline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#F44336"
        android:clickable="true"
        android:contentDescription="SOS Button"
        android:focusable="true"
        android:onClick="onClickChildHelpline"
        android:padding="15dp"
        android:text="International Child Helplines"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnInternationalCrisisHelpline"
        app:layout_constraintVertical_bias="0.309" />

</androidx.constraintlayout.widget.ConstraintLayout>